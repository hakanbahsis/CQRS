@model WebUI.CQRSPattern.Results.GetProductUpdateByIdQueryResult
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Ürün Güncelleme</h1>
<hr />
<form method="post">
    @Html.HiddenFor(c=>c.Id)
    <div class="input-group mb-3 border">
        <input type="text" asp-for="ProductName" class="form-control text-black" placeholder="Ürün Adı">
    </div>
    <div class="input-group mb-3 border">
        <input type="text" asp-for="Category" class="form-control text-black" placeholder="Kategori Adı">
    </div>
    <div class="input-group mb-3 border">
        <input type="text" asp-for="Brand" class="form-control text-black" placeholder="Marka Adı">
    </div>
    <div class="input-group mb-3 border">
        <input type="number" asp-for="Price" class="form-control text-black" placeholder="Fiyatı">
    </div>
    <div class="input-group mb-3 border">
        <input type="number" asp-for="Stock" class="form-control text-black" placeholder="Stok Adeti">
    </div>
    <button class="btn btn-success">Kaydet</button>
</form>
